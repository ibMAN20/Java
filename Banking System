import java.util.Scanner;

class Account {
    private String accName;
    private String accNo;
    private String type;
    private long balance;

    public void register(Scanner sc) {
        System.out.print("Enter Account Holder Name: ");
        accName = sc.nextLine();
        System.out.print("Enter Account Number: ");
        accNo = sc.nextLine();
        System.out.print("Enter Account Type (e.g., Savings/Current): ");
        type = sc.nextLine();
        System.out.print("Enter Initial Balance: ");
        balance = sc.nextLong();
        sc.nextLine(); // consume newline
        System.out.println("‚úî Account registered successfully!");
    }

    public void view() {
        if (accNo == null || accNo.isEmpty()) {
            System.out.println("‚ö† No account registered yet.");
            return;
        }
        System.out.println("\n----- Account Details -----");
        System.out.println("Account Holder Name: " + accName);
        System.out.println("Account Number     : " + accNo);
        System.out.println("Account Type       : " + type);
        System.out.println("Account Balance    : ‚Çπ" + balance);
        System.out.println("---------------------------\n");
    }

    public void modify(Scanner sc) {
        if (accNo == null || accNo.isEmpty()) {
            System.out.println("‚ö† No account found to modify.");
            return;
        }

        System.out.println("What would you like to modify?");
        System.out.println("1. Name");
        System.out.println("2. Account Type");
        System.out.println("3. Balance");
        System.out.print("Choose an option (1-3): ");
        int choice = sc.nextInt();
        sc.nextLine(); // consume newline

        switch (choice) {
            case 1:
                System.out.print("Enter new name: ");
                accName = sc.nextLine();
                System.out.println("‚úî Name updated successfully!");
                break;
            case 2:
                System.out.print("Enter new account type: ");
                type = sc.nextLine();
                System.out.println("‚úî Account type updated successfully!");
                break;
            case 3:
                System.out.print("Enter new balance: ");
                balance = sc.nextLong();
                sc.nextLine(); // consume newline
                System.out.println("‚úî Balance updated successfully!");
                break;
            default:
                System.out.println("‚ùå Invalid choice.");
        }
    }
}

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Account account = new Account();
        boolean running = true;

        while (running) {
            System.out.println("\n==== Bank Menu ====");
            System.out.println("1. Register Account");
            System.out.println("2. View Account Details");
            System.out.println("3. Modify Account");
            System.out.println("4. Exit");
            System.out.print("Enter your choice: ");
            int option = sc.nextInt();
            sc.nextLine(); // consume newline

            switch (option) {
                case 1:
                    account.register(sc);
                    break;
                case 2:
                    account.view();
                    break;
                case 3:
                    account.modify(sc);
                    break;
                case 4:
                    System.out.println("üëã Thank you! Exiting...");
                    running = false;
                    break;
                default:
                    System.out.println("‚ùå Invalid option. Please try again.");
            }
        }

        sc.close();
    }
}
